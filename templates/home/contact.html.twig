{% extends 'base.html.twig' %}

{% block title %}- CONTACT {% endblock %}

{% block body %}
<div class="container my-5">
	<div class="d-flex justify-content-around">
		<div class="col-5 d-flex flex-column justify-content-end">
			<h1 class="h3 mb-3 font-weight-normal">Nous contacter</h1>
		</div>
		<div class="col-7">
			{{ form_start(contactForm) }}
			<div class="row">
				<div class="col-lg-5 col-xl-4">
					<div class="form-group">
						{{ form_label(contactForm.nom, 'Nom',{'label_attr': {'class': 'ms-2 my-2'}}) }}
						{{ form_errors(contactForm) }}
						{{ form_widget(contactForm.nom) }}
					</div>
					<div class="form-group">
						{{ form_label(contactForm.email, 'Email',{'label_attr': {'class': 'ms-2 my-2'}}) }}
						{{ form_errors(contactForm) }}
						{{ form_widget(contactForm.email) }}
					</div>
					<div class="form-group">
						{{ form_label(contactForm.sujet, 'Sujet',{'label_attr': {'class': 'ms-2 my-2'}}) }}
						{{ form_errors(contactForm) }}
						{{ form_widget(contactForm.sujet) }}
					</div>
				</div>
				<div class="col-lg-7 col-xl-8">
					<div class="form-group">
						{{ form_label(contactForm.message, 'Saisissez votre message', {'label_attr': {'class': 'my-2'}}) }}
						{{ form_errors(contactForm) }}
						{{ form_widget(contactForm.message, {'attr': {'class': 'different-control'}}) }}
					</div>
				</div>
			</div>
			<div class="form-group text-center text-md-right my-3 d-flex flex-row-reverse">
				<button type="submit" class="button mt-0">Envoyer</button>
			</div>
			{{ form_end(contactForm) }}
		</div>
	</div>
</div>

{% endblock %}
